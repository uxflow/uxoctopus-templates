{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "block-no-empty": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "layer",
          "extends",
          "tailwind"
        ]
      }
    ],
    "no-descending-specificity": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "layer",
          "extends",
          "tailwind"
        ]
      }
    ],
    "scss/selector-no-redundant-nesting-selector": null
  }
}