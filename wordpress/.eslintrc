{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "root": true,
  "rules": {
    "import/named": "off",
    "no-param-reassign": "off",
    "import/no-extraneous-dependencies": ["error", { "peerDependencies": true }]
  },
  "plugins": [
    "tailwindcss",
    "@html-eslint",
    "@typescript-eslint"
  ],
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
